<!DOCTYPE html>
<html>
  <head>
    <title>RestaurantGuide</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="<%= root_url %>"/>Home</a>
        <% if logged_in? %>
          <%= link_to "#{current_user.name}'s profile", user_path(current_user), :class => "navbar-brand" %>
          <%= link_to "Log Out", logout_path, method: :post, :class => "navbar-brand" %>
        <% else %>
          <a class="navbar-brand" href="<%= new_user_path %>">Sign Up</a>
          <a class="navbar-brand" href="<%= signin_path %>">Log In</a>
        <% end %>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">

        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </div>

  <!-- content -->
  <div class="container"  role="main">
    <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>">
          <%= value %>
        </div>
      <% end %>
    </div>

    <%= yield %>
  </div>
  </body>
</html>
